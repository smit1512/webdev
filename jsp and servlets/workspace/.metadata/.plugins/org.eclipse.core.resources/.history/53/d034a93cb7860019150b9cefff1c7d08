package com.st.employee.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.util.logging.Logger;

import com.st.employee.controller.MyListener;
public class EmployeeConnection
{
	final Logger logger = Logger.getLogger(EmployeeConnection.class.getName());
	static Connection con;
	private EmployeeConnection()
	{
		logger.info("Object cannot be created for this class");
	}
	public static synchronized Connection getConnection() {
		if (con == null) {
			try {
				Class.forName("oracle.jdbc.driver.OracleDriver");
				con = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:XE", "system", "smit");

			} catch (Exception ex) {
				final Logger logger = Logger.getLogger(MyListener.class.getName());
				logger.info(ex.getMessage());
			}
		}
		return con;
	}
}
