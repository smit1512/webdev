package employee;

import java.io.IOException;
import java.io.PrintWriter;
import java.math.BigDecimal;
import java.sql.Connection;
import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.sql.*;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletContext;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
@WebServlet("/DisplayEmpDetails")
public class DisplayEmpDetails extends HttpServlet
{
	public void doGet(HttpServletRequest req,HttpServletResponse res) throws IOException, ServletException
	{
		PrintWriter out = res.getWriter();
		try
		{
			res.setContentType("text/html");
			ServletContext ctx = getServletContext();
			Connection con = (Connection) ctx.getAttribute("mycon");
			String sql="select * from employee";
			  ArrayList<EmpModel> emp=new ArrayList<EmpModel>();
			EmpModel e[] = new EmpModel[50];
			int i=-1;
			Statement stmt = con.createStatement();	
			ResultSet rs =  stmt.executeQuery(sql);
			System.out.println("done till here");
					while(rs.next())
					{  
						int x = rs.getInt(1);
						String y = rs.getString(2);
						String z = rs.getString(3);
						Double a = rs.getDouble(4);
						String s = BigDecimal.valueOf(a).toPlainString();
						//out.println("<tr><td>"+rs.getInt(1)+"</td><td>"+rs.getString(2)+"</td><td>"+rs.getString(3)+"</td><td>"+s+"</td><td><a href=\'RegisterEmpDetails.jsp?id="+rs.getInt(1)+"'>Edit</a></td><td><a href='DeleteEmpDetails?id="+x+"'>Delete</a></td></tr>"); 
						++i;
						e[i]=new EmpModel(x,y,z,s);
						out.println("done till here");
						emp.add(e[i]);
						out.println("done till here");
					} 
					req.setAttribute("obj",emp);
					RequestDispatcher rd = req.getRequestDispatcher("Display.jsp");
					rd.forward(req,res);
		}catch(Exception e)
		{
			out.println("hi     hello");
			out.println(e.getMessage());
		}
	}
}
